@model HotelManagement.Models.Hotel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Hotel</legend>
        @Html.HiddenFor(model => model.HotelID)
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Stars, new { style = "color:red" })
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Stars, (IEnumerable<SelectListItem>)ViewBag.StarSelection)
            @Html.ValidationMessageFor(model => model.Stars)
        </div>
        <p>
            <input type="submit" value="Save" class="btn btn-default" />
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
